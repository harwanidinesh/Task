<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Greenlab\Blog\Api\Data\PostInterface" type="Greenlab\Blog\Model\Post"/>
    <virtualType name="BoolflyPostGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Greenlab\Blog\Model\ResourceModel\Post\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">BoolflyPostGirdFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="BoolflyPostGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="boolflyblog_post_listing_data_source" xsi:type="string">Greenlab\Blog\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Greenlab\Blog\Model\ResourceModel\Post\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">bf_blog_post</argument>
            <argument name="eventPrefix" xsi:type="string">bf_blog_post_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">bf_blog_post_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Greenlab\Blog\Model\ResourceModel\Post</argument>
        </arguments>
    </type>
    <type name="Greenlab\Blog\Block\PostContent">
        <arguments>
            <argument name="templateProcessor" xsi:type="object">Magento\Widget\Model\Template\Filter</argument>
        </arguments>
    </type>
    <virtualType name="Greenlab\Blog\PostImageUpload" type="Greenlab\Blog\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">blog/tmp/post</argument>
            <argument name="basePath" xsi:type="string">blog/post</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
            <argument name="allowedMimeTypes" xsi:type="array">
                <item name="jpg" xsi:type="string">image/jpg</item>
                <item name="jpeg" xsi:type="string">image/jpeg</item>
                <item name="gif" xsi:type="string">image/gif</item>
                <item name="png" xsi:type="string">image/png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Greenlab\Blog\Controller\Adminhtml\Post\Image\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Greenlab\Blog\PostImageUpload</argument>
        </arguments>
    </type>
    <type name="Greenlab\Blog\Model\ResourceModel\Post">
        <plugin name="post_image_processing" type="Greenlab\Blog\Plugin\ImageProcessing\Post\ImageProcessingPlugin" sortOrder="1001"/>
    </type>
    <type name="Greenlab\Blog\Plugin\ImageProcessing\Post\ImageProcessingPlugin">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Greenlab\Blog\PostImageUpload</argument>
        </arguments>
    </type>
    <!-- Add Plugin for add blog link in navigation -->
    <type name="Magento\Theme\Block\Html\Topmenu">
        <plugin name="add_menu_item_plugin" type="Greenlab\Blog\Plugin\Topmenu" sortOrder="10" disabled="false"/>
    </type>
</config>
